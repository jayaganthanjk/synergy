<div class="container">
  <div class="page-header">
    <h1>Search Results</h1>
  </div>
  <% if @projects.any? %>
    <h2> Projects </h2>
    <% @projects.each do |project| %>
      <%= link_to project.name, project %> <br>
    <% end %>
  <% end %>

  <% if @stories.any? %>
    <h2> Stories </h2>
    <% @stories.each do |story| %>
      <%= link_to story.name, project_story_path(project_id: story.project_id, id: story.id) %> <br>
    <% end %>
  <% end %>

  <% if @tasks.any? %>
    <h2> Tasks </h2>
    <% @tasks.each do |task| %>
      <%= link_to task.name, project_story_path(project_id: task.project_id, id: task.story_id) %> <br>
    <% end %>
  <% end %>

<% unless (@projects + @stories + @tasks).count != 0 %>
  <h2> No results found.. </h2>
<% end %>

