<%= form_for([@project, @story, @task]) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name,:class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :due_date %>
    <div class="input-group date">
      <% if @task.due_date %>
        <%= f.text_field :due_date , :class => "form-control", :value => @task.due_date.strftime("%d-%m-%Y"), :placeholder => "dd-mm-yyyy" %>
      <% else %>
        <%= f.text_field :due_date , :class => "form-control", :placeholder => "dd-mm-yyyy" %>
      <% end %>
      <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
    </div> 
  </div>

  <div class="form-group">
    <%= f.label :estimated_time %>
    <%= f.text_field :estimated_time ,:class=>"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", :class => "btn btn-primary"%>
  </div>
<% end %>
