<%= form_for([@project, @story]) do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
        <% @story.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">    
    <%= f.label :name %> 
    <%= f.text_field :name, :class => "form-control" %>
  </div>

  <div class="form-group">    
    <%= f.label :description  %> 
    <%= f.text_area :description ,:class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :due_date %>
    <div class="input-group date">
      <% if @story.due_date %>
        <%= f.text_field :due_date , :class => "form-control", :value => @story.due_date.strftime("%d-%m-%Y"), :placeholder => "dd-mm-yyyy" %>
      <% else %>
        <%= f.text_field :due_date , :class => "form-control dp-end-date", :placeholder => "dd-mm-yyyy" %>
      <% end %>
      <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
    </div> 
  </div>

  <%= f.submit "Create", class: "btn btn-primary" %>
<% end %>
