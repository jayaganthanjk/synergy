<% if activity.trackable %> 
  <%= link_to(project_story_path(id:  activity.trackable.story_id, project_id: activity.recipient_id)) do %> 
 <span class="activity-owner"><%=activity.owner.email %></span> assigned <%=User.find(activity.trackable.assigned_to).email%> to task <%=activity.trackable.name%>
  <% end %>
<% else %>
<span class="activity-owner"><%= activity.owner.email %></span> added a user to task which has since been removed
<% end %>