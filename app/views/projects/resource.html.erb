<div class="row">
  <div class="container">
    <div class="col-md-4 col-md-offset-4">

      <%= form_tag(addUser_project_path(),method: "post") do %>
        <div class="form-group">
          <%= label_tag(:email, "Email:") %>
          <%= text_field_tag(:email,nil,{class:"form-control",autocomplete: 'off'}) %>
        </div>
        <div class="form-group">
          <%= select_tag(:role, options_for_select([['admin'],['developer'],['client']]) , :class => "form-control" ) %>
        </div>
        <%= submit_tag("Add Role",{class: "btn btn-primary"}) %>
      <% end %>
    </div>

  </div>
</div>
<div class="container">
  <div class="row">
    <% if @project.users.any? %>
      <% @project.users.each do |user|%>
        <div class="col-md-4">
          <h4 class="text-info"><%= user.email %></h4>
          <div class="row">
            <% @project.project_user_roles(user).each do |role| %>
              <div class="col-md-4">
                <p><%= role.name %></p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>No users in the project. If u are the super-admin add roles to the project!</p>
    <% end %> 
  </div>
</div>
